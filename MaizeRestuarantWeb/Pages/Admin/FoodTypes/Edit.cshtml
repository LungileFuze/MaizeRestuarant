@model MaizeRestuarantWeb.Pages.Admin.FoodTypes.EditModel
@{
}

<form method="post">
    <input hidden asp-for="FoodType.Id" />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Update Food Type</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="FoodType.Name"></label>
            <input asp-for="FoodType.Name" class="form-control" />
            <span asp-validation-for="FoodType.Name" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px; height:50px">Update</button>
        <a asp-page="Index" class="btn btn-outline-secondary" style="width:170px; height:50px">Back To List</a>
    </div>
</form>

